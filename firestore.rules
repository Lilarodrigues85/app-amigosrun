rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users - leitura pública, escrita apenas pelo próprio usuário
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Corridas - leitura pública, criação por autenticados, edição pelo criador
    match /corridas/{runId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.createdBy;
      
      // Subcoleção de presenças
      match /presencas/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Feed/Posts - leitura pública, criação por autenticados, edição pelo autor
    match /feed/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Posts - cada usuário tem seu próprio documento com array de posts
    match /posts/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Locations/Localizacoes - leitura pública, escrita pelo próprio usuário
    match /locations/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /localizacoes/{localizacaoId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Notificações - apenas o destinatário pode ler/escrever
    match /notificacoes/{notificationId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Presenças - coleção global de presenças
    match /presencas/{presencaId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
